{
  "manifest_version": 3,
  "name": "Code Snippet Extension",
  "version": "1.0.0",
  "description": "A code snippet extension",
  "action": {
    "default_title": "Click to open side panel"
  },
  "permissions": [
    "sidePanel",
    "storage"
  ],
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}